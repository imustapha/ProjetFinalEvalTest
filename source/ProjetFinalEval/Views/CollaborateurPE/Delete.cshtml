@model ProjetFinalEval.collaborateurpe

@{
    ViewBag.Title = "Supprimer";
    Layout = "~/Views/Shared/_LayoutStablePage1.cshtml";
}

<ul class="page-breadcrumb breadcrumb">
    <li>

        <a href="~/Home/Accueil">Accueil</a>
        <i class="fa fa-circle"></i>
        <a href="~/CollaborateurPE/Index">Liste des COllaborateurPE</a>
        <i class="fa fa-circle"></i>
        <a href="~/CollaborateurPE/Delete/@Model.IDCOLLABORATEURPE">Supprimer</a>
        <i class="fa fa-circle"></i>
    </li>

</ul>


<div class="row">
    <div class="col-md-12">

        <h3>Êtes-vous sûr de vouloir supprimer ce collaborateur?</h3>

        <div class="row margin-top-20">
            <div class="col-md-12">
                <!-- BEGIN PROFILE SIDEBAR -->
                <div class="profile-sidebar">
                    <!-- PORTLET MAIN -->
                    <div class="portlet light profile-sidebar-portlet">
                        <!-- SIDEBAR USERPIC -->
                        <div class="profile-userpic">
                            <img src="data:image/png;base64,@Convert.ToBase64String(Model.IMAGEPE, 0,Model.IMAGEPE.Length)" class="img-responsive" />
                        </div>
                        <!-- END SIDEBAR USERPIC -->
                        <!-- SIDEBAR USER TITLE -->
                        <div class="profile-usertitle">
                            <div class="profile-usertitle-name">
                                @Html.DisplayFor(model => model.NOMPE) @Html.DisplayFor(model => model.PRENOMPE)
                            </div>
                            <div class="profile-usertitle-job">
                                @Html.DisplayFor(model => model.EMAILPE)
                            </div>
                            <div class="profile-usertitle-job">
                                @Html.DisplayFor(model => model.STATUT)
                            </div>
                            <div class="profile-usertitle-job">
                                @Html.DisplayFor(model => model.fonction.NOMFONCTION)
                            </div>
                            <div>
                                <br />
                            </div>
                            <div>
                                <br />
                            </div>
                            <div>
                                <br />
                            </div>
                            <div>
                                <br />
                            </div>
                            <div>
                                <br />
                            </div>
                        </div>
                        <!-- END SIDEBAR USER TITLE -->
                        <!-- SIDEBAR BUTTONS -->
                        <!-- END SIDEBAR BUTTONS -->
                        <!-- SIDEBAR MENU -->
                        <div class="profile-usermenu">


                        </div>
                        <!-- END MENU -->
                    </div>
                    <!-- END PORTLET MAIN -->
                    <!-- PORTLET MAIN -->
                    <!-- END PORTLET MAIN -->
                </div>
                <!-- END BEGIN PROFILE SIDEBAR -->
                <!-- BEGIN PROFILE CONTENT -->
                <div class="profile-content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="portlet light">
                                <div class="portlet-title tabbable-line">
                                    <div class="caption caption-md">
                                        <i class="icon-globe theme-font hide"></i>
                                        <span class="caption-subject font-blue-madison bold uppercase">Profile</span>
                                    </div>

                                </div>
                                <div class="portlet-body">
                                    <div class="tab-content">
                                        <!-- PERSONAL INFO TAB -->
                                        <div class="tab-pane active" id="tab_1_1">



                                            <div class="form-group">
                                                @Html.LabelFor(model => model.NOMPE, "Nom", htmlAttributes: new { @class = "control-label col-md-2" })
                                                @Html.EditorFor(model => model.NOMPE, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                                                @Html.ValidationMessageFor(model => model.NOMPE, "", new { @class = "text-danger" })

                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.PRENOMPE, "Prénom", htmlAttributes: new { @class = "control-label col-md-2" })
                                                @Html.EditorFor(model => model.PRENOMPE, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                                                @Html.ValidationMessageFor(model => model.PRENOMPE, "", new { @class = "text-danger" })

                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.EMAILPE, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
                                                @Html.EditorFor(model => model.EMAILPE, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                                                @Html.ValidationMessageFor(model => model.EMAILPE, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.fonction.NOMFONCTION, "Fonction", htmlAttributes: new { @class = "control-label col-md-2" })
                                                @Html.EditorFor(model => model.fonction.NOMFONCTION, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                                                @Html.ValidationMessageFor(model => model.IDFONCTION, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">

                                            </div>

                                            <div class="form-group">

                                                @Html.LabelFor(model => model.STATUT, "Statut", htmlAttributes: new { @class = "control-label col-md-2" })
                                                @Html.EditorFor(model => model.STATUT, new { htmlAttributes = new { @class = "form-control", disabled = true } })



                                            </div>
                                            <br />
                                            <br />
                                            <div class="margiv-top-10">
                                                <div>
                                                    @using (Html.BeginForm())
                                                    {
                                                        @Html.AntiForgeryToken()

                                                        <div class="form-actions no-color">
                                                            <input type="submit" value="Supprimer" class="btn red-haze" />@Html.ActionLink("Retour à la liste", "Index", null, new { @class = "btn default" })

                                                        </div>
                                                    }
                                                </div>
                                            </div>



                                        </div>
                                        <!-- END PERSONAL INFO TAB -->
                                        <!-- CHANGE AVATAR TAB -->
                                        <!-- END CHANGE AVATAR TAB -->
                                        <!-- CHANGE PASSWORD TAB -->
                                        <!-- END CHANGE PASSWORD TAB -->
                                        <!-- PRIVACY SETTINGS TAB -->
                                        <!-- END PRIVACY SETTINGS TAB -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END PROFILE CONTENT -->
            </div>

        </div>
</div>
</div>